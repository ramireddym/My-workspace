		driver.findElement(By.id("qtyTextBox")).clear();
		
		
		driver.findElement(By.id("qtyTextBox")).sendKeys("2");
		
		
		driver.findElement(By.linkText("Buy It Now")).click();
		
		
		
		driver.findElement(By.id("regTab")).click();
