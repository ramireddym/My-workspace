		driver.findElement(By.id("remail")).sendKeys("ramireddy591@gmail.com");
		driver.findElement(By.xpath(".//*[@id='showPASSWORD']/ul/li/span[1]")).click();
		driver.findElement(By.id("PASSWORD")).sendKeys("mareddy3");
		driver.findElement(By.id("firstname")).sendKeys("venkataramireddy");
		driver.findElement(By.id("lastname")).sendKeys("mareddy");
		WebElement mvr1=driver.findElement(By.xpath("//div[@class='flag-dropdown']/div"));
//		
